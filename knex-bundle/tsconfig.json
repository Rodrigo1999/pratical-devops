{
  "compilerOptions": {
    "target": "es2017",       
    "lib": ["es6", "ES2021", "dom"],                            
    "module": "commonjs",                               
    "outDir": "knex-build",      
    "rootDir": ".",   
    "baseUrl": ".",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,  
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "./**/*.json"]
}
