{
  "compilerOptions": {
    "target": "es2017",       
    "lib": ["es6", "ES2021", "dom"],                            
    "module": "commonjs",                               
    "outDir": "./build",      
    "rootDir": "./src",   
    "baseUrl": ".",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,                                 
    "paths": {
      "@pokeapp/*": ["./src/pokeapp/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}
