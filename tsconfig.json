{
  "compilerOptions": {
    "target": "es2017",       
    "lib": ["es6", "ES2021", "dom"],                            
    "module": "commonjs",                               
    "outDir": "./build",      
    "rootDir": "./src",   
    "baseUrl": ".",
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,  
    "resolveJsonModule": true,                               
    "paths": {
      "@pokeapp/*": ["./src/pokeapp/*"],
      "@geolocation/*": ["./src/geolocation/*"],
      "@pokedex/*": ["./src/pokedex/*"],
      "@shared/*": ["./src/shared/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["src/**/*"]
}
